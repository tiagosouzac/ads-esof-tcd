enum Role {
    ADMIN
    PO
    PM
    DESIGNER
    DEVELOPER
    VIEWER
}

model User {
    id        Int      @id @default(autoincrement())
    name      String
    email     String   @unique
    password  String
    role      Role
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@map("users")
}
