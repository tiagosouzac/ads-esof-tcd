enum Role {
  MANAGER
  ARCHITECT
  DESIGNER
  DEVELOPER
  QUALITY_ANALYST
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      Role
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  Task    Task[]
  Project Project[]

  @@map("users")
}
